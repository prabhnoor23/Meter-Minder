@model Pspcl.ViewModels.LoginModel
@{
    Layout = "~/Views/Shared/NoSideBarLayout.cshtml";
}

<form class="login-form" asp-action="Login" asp-controller="Account" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="">
        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <input asp-for="UserName" placeholder="Enter your Username" class="form-control input-border" aria-describedby="username" />
            <span asp-validation-for="UserName" class="text-danger fs-6"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input type="password" asp-for="Password" placeholder="Enter your Password" class="form-control input-border" />
            <span asp-validation-for="Password" class="text-danger fs-6"></span>
        </div>
        <button type="submit" class="btn btn-dark w-100 mt-3 btn-orange">Login</button>
       
    </div>

</form>




